{
    // launch.json
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Linux Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/PSPOD",
            "args": ["-d"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "WSL Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "/mnt/d/Portable Workstation/file exchange/PSPOD/bin/PSPOD",
            "args": ["sample_input"],
            "stopAtEntry": false,
            "cwd": "/mnt/d/Portable Workstation/file exchange/PSPOD",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "internalConsoleOptions": "openOnSessionStart",
            "setupCommands": [
                {
                    "description": "pretty printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": false
                }
            ],
            "pipeTransport":  {
                "pipeCwd": "",
                "pipeProgram": "C:\\Windows\\System32\\bash.exe",
                "pipeArgs": ["-c","-i"],
                "debuggerPath": "/usr/bin/gdb"
            },
            "sourceFileMap": {
                "/mnt/d": "d:\\"
            },
        }
    ]
}